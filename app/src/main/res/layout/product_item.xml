<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="12dp"
    android:background="@drawable/border">

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="24dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        tools:srcCompat="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Sample Product Name" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Description"
        android:textSize="15sp"
        android:textColor="@android:color/darker_gray"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="This is a sample description for the product that is being displayed here." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:id="@+id/textPrice"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$99.99"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginStart="8dp" /> <!-- Optional: adds space between the label and value -->
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock Quantity: "
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/textStockQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
